package example1;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;

public class App {

	public static void main(String[] args) throws FileNotFoundException {
		
		// file1 is pointed to a file that does not exist
		File file1 = new File("randomtext.txt");
		FileReader fileReader = new FileReader(file1);
		
		// FileReader then tries to read the nonexistent txt file referred to by file1
		// It throws the FileNotFound exception
		// throws declaration added to main method
		
	}

}
